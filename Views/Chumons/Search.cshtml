@using ConvenienceMVC.Models.Views.Chumons
@model ChumonKeyViewModel
@{
    ViewData["Title"] = "Search";
}

<h1>注文実績検索</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Search" id="notBarrageForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ShiireSakiId" class="control-label"></label>
                <select asp-for="ShiireSakiId" asp-items="@Model.ShiireSakiIdList" class="form-control" tabindex="1">
                    <option value="">-- 選択してください --</option>
                </select>
                <span asp-validation-for="ShiireSakiId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChumonDate" class="control-label"></label>
                <input asp-for="ChumonDate" class="form-control" type="date" tabindex="1" />
                <span asp-validation-for="ChumonDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" id="notBarrageButton" tabindex="1" />
            </div>
        </form>
    </div>
</div>

<script src="/js/NotBarrage.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
