@using ConvenienceMVC.Models.Views.Shiires
@model ShiireSearchViewModel
@{
    ViewData["Title"] = "Search";
}

<h1>仕入実績検索</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Search" id="notBarrageForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChumonId" class="control-label"></label>
                <select asp-for="ChumonId" asp-items="@Model.ChumonIds" class="form-control" tabindex="1">
                    <option value="">-- 選択してください --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" id="notBarrageButton" tabindex="1" />
            </div>
        </form>
    </div>
</div>

<script src="/js/NotBarrage.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
